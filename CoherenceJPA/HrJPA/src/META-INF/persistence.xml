<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="HrDS" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/hrDS</jta-data-source>
		<class>nl.amis.model.hr.Department</class>
		<class>nl.amis.model.hr.Employee</class>
		<properties>
            <property name="javax.persistence.jtaDataSource" value="jdbc/hrDS"/>
			<property name="eclipselink.target-server" value="WebLogic" />
			<property name="eclipselink.logging.level" value="FINE" />
		</properties>
	</persistence-unit><persistence-unit name="HrJPA" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>nl.amis.model.hr.Department</class>
		<class>nl.amis.model.hr.Employee</class>
		<properties>
			<property name="eclipselink.target-server" value="WebLogic"/>
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@//wls12:1521/test.oracle.com"/>
			<property name="javax.persistence.jdbc.user" value="hr"/>
			<property name="javax.persistence.jdbc.password" value="hr"/>
			<property name="eclipselink.logging.level" value="FINE"/>
		</properties>
	</persistence-unit>
	

</persistence>
